{
  "manifest_version": 3,
  "name": "Loadshift Assistant",
  "version": "1.0.0",
  "description": "A Chrome extension to help truck drivers find and analyze transport jobs on Loadshift",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"]
}
